{
  "name": "testing",
  "version": "1.0.0",
  "description": "trying to get CI/CD and testing to play nice",
  "main": "index.js",
  "scripts": {
    "build": "echo building!",
    "cmt": "npx git-cz",
    "deploy": "",
    "dev": "",
    "lint": "eslint --fix src test",
    "saucescript": "karma start test/unit/karma.sauce.js",
    "test": "npm run lint && flow check && concurrently \"npm run test:unit\" \"npm run test:e2e\"",
    "test:cover": "karma start test/unit/karma.cover.js",
    "test:unit": "karma start test/unit/karma.unit.js",
    "test:e2e": "testcafe all test/e2e/*.test.js -r xunit:test-results/res.xml",
    "test:sauce:unit": "npm run saucescript -- 0 && npm run saucescript -- 1 && npm run saucescript -- 2",
    "test:sauce:e2e": "node test/e2e/runner.js",
    "test:sauce": "npm run test:sauce:unit && npm run test:sauce:e2e"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexgagnon/testing.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexgagnon/testing/issues"
  },
  "homepage": "https://github.com/alexgagnon/testing#readme",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "codecov": "^3.0.4",
    "commitizen": "^2.10.1",
    "concurrently": "^3.6.0",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^6.0.0",
    "eslint": "^5.1.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-testcafe": "^0.2.1",
    "flow-bin": "^0.76.0",
    "globby": "^8.0.1",
    "husky": "^1.0.0-rc.13",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.2",
    "karma-junit-reporter": "^1.2.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "semantic-release": "^15.7.2",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "testcafe": "^0.20.4",
    "testcafe-browser-provider-saucelabs": "^1.3.0",
    "testcafe-reporter-xunit": "^2.1.0",
    "webpack": "^4.16.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "scripts": {
      "precommit": "npm run test:unit",
      "prepush": "npm run test"
    }
  }
}
